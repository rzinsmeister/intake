<body>

<div id="page">
<div id="searchtitle" class="well">
<h2>Search Results</h2>
</div>

<% if @schools.empty? %>
  <h3 class="alert">No schools with that name.</h3>  
  
<% else%>


<div class="span11 entrants-wrapper">

<table class="table table-condensed table-hover">
  <tr>
    <th>School Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Phone</th>
    <th>Social Worker</th>
    <th>Social Worker Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
	
<% @schools.each do |school| %>
  <tr>
    <td><%= school.schoolname %></td>
    <td><%= school.street %></td>
    <td><%= school.city %></td>
    <td><%= school.state %></td>
    <td><%= school.zip %></td>
    <td><%= school.officephone %></td>
    <td><%= school.sswname %></td>
    <td><%= school.sswphone %></td>
  
    <td><%= link_to 'Show', school %></td>
    <td><%= link_to 'Edit', edit_school_path(school) %></td>
    <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<% end %>
</div>

<div class="btn">
<%= link_to 'Back', root_path %>
</div>


<% if @entrants.empty? %>
  <h3 class="alert">No entrants with that name.</h3>  

<% else%>

<div class="span11 entrants-wrapper">

<table class="table table-condensed table-hover ">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Last Name</th>
    <th>Last Name</th>
    <th>Date of Birth</th>
    <th>Grade</th>
    <th>School</th>
    <th>Last Name</th>
  	<th>Last Name</th>
    <th>Last Name</th>
    <th>Last Name</th>
  	<th>Last Name</th>
    <th>Last Name</th>
    <th>Last Name</th>
    <th>Last Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @entrants.each do |entrant| %>
  <tr>
    <td><%= entrant.cnamef %></td>
    <td><%= entrant.cnamel %></td>
    <td><%= entrant.contact_id %></td>
    <td><%= entrant.dob %></td>
    <td><%= entrant.entrydate %></td>
    <td><%= entrant.exitdate %></td>
    <td><%= entrant.grade %></td>
    <td><%= entrant.lastschool %></td>
    <td><%= entrant.mnres %></td>
    <td><%= entrant.mpsschool %></td>
    <td><%= entrant.nonmpsschool %></td>
    <td><%= entrant.note %></td>
    <td><%= entrant.shelterid %></td>
    <td><%= entrant.shelterschool %></td>
    <td><%= entrant.totaldays %></td>
 
    <td><%= link_to 'Show', entrant %></td>
    <td><%= link_to 'Edit', edit_entrant_path(entrant) %></td>
    <td><%= link_to 'Destroy', entrant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<% end %>
</div>

<div class="btn">
<%= link_to 'Back', root_path %>
</div>








</div>


</body>