    <label class="control-label"><%= f.label :city, "City" %></label>
    <div class="controls"><%= f.text_field :city %></div>
  </div>
  <div class="field">
    <label class="control-label"><%= f.label :state, "State" %></label>
    <div class="controls"><%= f.text_field :state %></div>
  </div>
  <div class="field">
    <label class="control-label"><%= f.label :zip, "Zip" %></label>
    <div class="controls"><%= f.number_field :zip %></div>
  </div>
  <div class="field">
    <label class="control-label"><%= f.label :officephone, "Office Phone" %></label>
    <div class="controls"><%= f.text_field :officephone %></div>
  </div>
  <div class="field">
