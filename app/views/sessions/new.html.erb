<div id=login>

<h2>Enter your login to access the site</h2>
<% if flash[:notice] %>
    <div id="notice"><%= flash[:notice] %></div>
<% end %>

<%= form_tag session_path do %>
<%= label_tag :username %>
<%= text_field_tag :username %>

<%= label_tag :password %>
<%= password_field_tag :password %>

<%= submit_tag "login", :class=> 'btn' %>

<% end %>


</div>