<div id="page">
<div id="results">
<div id="searchtitle">

<h2>Results</h2>
</div>
<div class="btn">
<%= link_to 'Run Another Report', reports_url %>
</div>
<div class="span11 entrants-wrapper">

<table class="table table-condensed table-hover">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Date of Birth</th>
    <th>Grade</th>
    <th>Shelter</th>
  </tr>


<% @results.each do |result| %>
  <tr>
    <td><%= result.cnamef %></td>
    <td><%= result.cnamel %></td>
    <td><%= result.dob %></td>
    <td><%= result.grade %></td>
    <td><% if(result.shelterid.nil?) then %>
    The student has no shelter to speak of.
  <% else %>
    <%= Shelter.find(result.shelterid).sheltername %>
  <% end %></td>
<% end %>
</table>
</div>

</div>
</div>
</body>