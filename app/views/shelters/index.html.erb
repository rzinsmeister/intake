<h1>Listing shelters</h1>

<table>
  <tr>
    <th>Sheltername</th>
    <th>Street</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shelters.each do |shelter| %>
  <tr>
    <td><%= shelter.sheltername %></td>
    <td><%= shelter.street %></td>
    <td><%= shelter.city %></td>
    <td><%= shelter.state %></td>
    <td><%= shelter.zip %></td>
    <td><%= shelter.phone %></td>
    <td><%= link_to 'Show', shelter %></td>
    <td><%= link_to 'Edit', edit_shelter_path(shelter) %></td>
    <td><%= link_to 'Destroy', shelter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

