    	<label class="control-label"><%= task_form.label :shelterid, "Shelter" %></label>
    	<div class="controls"><%= task_form.number_field :shelterid %></div>
  	</div>
  	

  
			<%= f.fields_for :stays do |sub_form| %>
			  	<div class="field">
    				<label class="control-label"><%= sub_form.label :entrydate, "Entry Date" %></label>
    				<div class="controls"><%= sub_form.date_select :entrydate %></div>
  				</div>
			
		  <% end %>

