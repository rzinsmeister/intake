  <div class="controls"> 
    <%= f.link_to_add "Add Another Child", :entrants, :class=> 'btn' %>

  
  <div class="actions">
    <%= f.submit :class=> 'btn' %>
  </div>
  </div>
  
<% end %>
</div>
</div>
