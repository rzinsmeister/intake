<!DOCTYPE html>
<html>
<head>
  <title>Intake</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<script type="text/javascript">
  $(document).ready(function() {
    $('div.pop').each(function() {
      $(this).qtip({
        content: $('#hide-' + $(this).attr('id')),
        style: {
          name: 'cream'
},        
        position: {
        corner: {
         target: 'topMiddle',
         tooltip: 'bottomLeft'
      }
},
        show: 'mouseover',
        hide: 'mouseout'

      });
    });
  });   
</script>



<body>
    <div class="navbar"> 
      <div class="navbar-inner">
    	 	<div class="container">      	
      	 <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>
				<%= link_to "MPS Intake", root_path, class: "brand" %>

		   	<div class="form-search">
			    <%= form_tag "schoolssearch", :method => 'get' do %>  
      		  <%= text_field_tag :search, params[:search], :class=>'input-medium search-query' %>  
        		<%= submit_tag "Search", :name => nil, :class=>'btn' %>  
    			<% end %>
    		
    		</div>

 				 <div class="btn-group pull-right">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="icon-user"></i><%= session[:username] %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Sign Out', logout_path %></li>
            </ul>
          </div>
          
      			<div class="nav-collapse collapse">
         			<ul class="nav">
          			<li><%= link_to 'Students', entrants_path %></li>
          			<li><%= link_to 'Shelters', shelters_path %></li>
          			<li><%= link_to 'Schools', schools_path %></li>
        			</ul>
        		</div>
        
        </div><!--container-->
      </div><!--navbar inner-->
    </div> <!--navbar-->
    
<div id="page">

<div class="container-fluid">
  <div class="row-fluid">
  
  	<div class="span3 sidebar-width">
  	  <div class="well sidebar-nav-fixed">
	    <div id="sidebar">
	      <ul class="nav nav-list">
	      	<li class="nav-header">Tables</li>
					<li><%= link_to 'Entrants', entrants_path %></li>
					<li><%= link_to 'Schools', schools_path %></li>
					<li><%= link_to 'Shelters', shelters_path %></li>
	        <li class="nav-header">Add A New</li>
	        <li><%= link_to 'Entrant', new_contact_path %></li>
          <li><%= link_to 'School', new_school_path %></li>
          <li><%= link_to 'Shelter', new_shelter_path %></li>
          <li class="nav-header">Reports</li>
	        <li><%= link_to 'Run a Report', reports_path %></li>
		  	</ul>
      </div> <!--Sidebar-->
      </div> <!--Sidebar well-->
		</div> <!--Span-->
    <div class="span9">

			<%= yield %>
    </div><!--Span-->
    
        </div>
</div>


<footer>
	<div class="navbar navbar-fixed-bottom">
    <p>&copy; Company 2012</p>
  </div>
</footer>
</div>

      
</body>
</html>
